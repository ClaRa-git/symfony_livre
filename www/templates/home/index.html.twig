{# Récupération de la base #}
{% extends 'base.html.twig' %}

{# On définit le titre de la page #}
{% block title %}
	{{title|default('Nos séries')}}
{% endblock %}

{% block body %}
	<div class="container mt-5">
		<header class="mt-4">
			<h1 class="text-center mb-5 display-4">{{title|default('Nos séries')}}</h1>			
		</header>

		<div class="game-grid">
			{% for serie in series %}
				{% include 'components/_serie_card.html.twig' with {'serie': serie} %}
			{% endfor %}
		</div>
	</div>

{% endblock %}
