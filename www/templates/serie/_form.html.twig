
{{ form_start(form, {'attr': {'class': 'game-form'}}) }}
{{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.title) }}
        {{ form_widget(form.title) }}
        {{ form_errors(form.title) }}
    </div>

    <div class="form-group">
        {{ form_label(form.description) }}
        {{ form_widget(form.description) }}
        {{ form_errors(form.description) }}
    </div>

    <div class="form-group">
        {{ form_label(form.imagePath) }}

        {# Si une image actuelle est pr√©sente, on l'affiche #}
        {% if form.currentImage is defined and form.currentImage.vars.value %}
            <div class="current-image">
                <label>Image actuelle :</label>
                <img src="{{ asset('images/covers/' ~ form.currentImage.vars.value) }}" 
                    alt="Image actuelle" 
                    style="max-width: 150px; margin-bottom: 10px;">
            </div>
        {% endif %}

        {{ form_widget(form.imagePath) }}
        {{ form_errors(form.imagePath) }}
    </div>

    <div class="form-group">
        {{ form_label(form.number_volume) }}
        {{ form_widget(form.number_volume) }}
        {{ form_errors(form.number_volume) }}
    </div>

    <div class="form-group">
        {{ form_label(form.isFinished) }}
        {{ form_widget(form.isFinished) }}
        {{ form_errors(form.isFinished) }}

    <div class="form-group">
        {{ form_label(form.dateStarted) }}
        {{ form_widget(form.dateStarted) }}
        {{ form_errors(form.dateStarted) }}
    </div>

    <div class="form-group">
        {{form_label(form.authors)}}
        <div class="console-switches">
            {% for author in form.authors %}
                <div class="form-switch">
                    {{form_widget(author, {'attr': {'class': 'form-check-input'}})}}
                    {{form_label(author, null, {'attr': {'class': 'form-check-label'}})}}
                </div>            
            {% endfor %}
        </div>
        {{form_errors(form.authors)}}
    </div>

    <div class="form-group">
        {{form_label(form.editors)}}
        <div class="console-switches">
            {% for editor in form.editors %}
                <div class="form-switch">
                    {{form_widget(editor, {'attr': {'class': 'form-check-input'}})}}
                    {{form_label(editor, null, {'attr': {'class': 'form-check-label'}})}}
                </div>            
            {% endfor %}
        </div>
        {{form_errors(form.editors)}}
    </div>

    <div class="form-group">
        {{form_label(form.types)}}
        <div class="console-switches">
            {% for type in form.types %}
                <div class="form-switch">
                    {{form_widget(type, {'attr': {'class': 'form-check-input'}})}}
                    {{form_label(type, null, {'attr': {'class': 'form-check-label'}})}}
                </div>            
            {% endfor %}
        </div>
        {{form_errors(form.types)}}
    </div>

    <button type="submit" class="btn-submit">
        <i class="fas fa-save"></i>
        {{ button_label|default('Enregistrer') }}
    </button>

{{ form_end(form) }}
