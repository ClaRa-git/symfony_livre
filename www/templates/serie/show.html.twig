{% extends 'base.html.twig' %}

{% block title %}Serie{% endblock %}

{% block body %}
    <h1>Serie</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ serie.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ serie.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ serie.description }}</td>
            </tr>
            <tr>
                <th>Number_volume</th>
                <td>{{ serie.numberVolume }}</td>
            </tr>
            <tr>
                <th>DateStarted</th>
                <td>{{ serie.dateStarted ? serie.dateStarted|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsFinished</th>
                <td>{{ serie.isFinished ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_serie_index') }}">back to list</a>

    <a href="{{ path('app_serie_edit', {'id': serie.id}) }}">edit</a>

