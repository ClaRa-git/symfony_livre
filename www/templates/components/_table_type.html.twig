<h2>{{title}}</h2>
<table class="game-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for type in types %}
        <tr>
            <td>{{ type.id }}</td>
            <td>{{ type.label }}</td>
            <td>
                <div class="game-actions">
                    <a href="{{path('app_type_show', {'id': type.id})}}" class="view-link">Voir</a>
                    <a href="{{path('app_type_edit', {'id': type.id})}}" class="edit-link">Editer</a>
                </div>                    
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="2">Pas de genre trouv√©</td>
        </tr>
    {% endfor %}
    </tbody>
</table>