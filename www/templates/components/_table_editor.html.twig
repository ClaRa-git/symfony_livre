<h2>{{title}}</h2>
<table class="game-table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Adresse</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for editor in editors %}
        <tr>
            <td>{{ editor.id }}</td>
            <td>{{ editor.name}}</td>
            <td>{{ editor.address }}</td>
            <td>
                <div class="game-actions">
                    <a href="{{path('app_editor_show', {'id': editor.id})}}" class="view-link">Voir</a>
                    <a href="{{path('app_editor_edit', {'id': editor.id})}}" class="edit-link">Editer</a>
                </div>                    
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4">Pas de maison d'édition trouvée</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

